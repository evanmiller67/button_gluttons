!!! 5
%html{:lang => "en"}
  %head
    %meta{:name => "author", :content => "CafePress"}
    %meta{:charset => "utf-8"}
    %title= content_for?(:title) ? yield(:title) : "ButtonGluttons"
    = csrf_meta_tags

    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"

    = stylesheet_link_tag "application", :media => "all"
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}

    %link{:href => image_path("favicon.ico"), :rel => "shortcut icon"}/

  %body
    %header
      = image_tag "header_text.png"
    .container
  
      = raw build_flash

      .row
        .span12
          = yield
    
    .footer
      .footer-padding
      .footer-rule
      .footer-text
        &copy; 2012 CafePress Inc.

    = javascript_include_tag "application"
